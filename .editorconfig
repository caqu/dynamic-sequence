# For all files, Unix-style newlines with a newline ending
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{jsp,jspf}]
indent_style = space
indent_size = 2

[*.{js,jsx,scss}]
indent_style = space
indent_size = 2
quote_type = single

[*.json]
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
